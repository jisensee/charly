{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "interface-name": {
      "options": ["never-prefix"]
    },
    "quotemark": {
      "severity": "error",
      "options": ["single", "avoid-escape", "avoid-template"]
    },
    "semicolon": {
      "options": ["never"]
    },
    "max-classes-per-file": false,
    "member-access": {
      "options": ["check-accessor", "check-constructor"]
    },
    "arrow-parens": false,
    "typedef": {
      "options": [
        "call-signature",
        "parameter",
        "property-declaration",
        "member-variable-declaration"
      ]
    },
    "no-default-export": true,
    "object-literal-sort-keys": {
      "options": ["match-declaration-order"]
    },
    "max-line-length": {
      "options": {
        "limit": 80,
        "ignore-pattern": "^import"
      }
    }
  },
  "rulesDirectory": []
}
