{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "charly/*": ["./*"],
      "charly": ["*"]
    },
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "target": "es5",
    "lib": ["es6"],
    "strictNullChecks": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": ["src/**/*"]
}
